#!/usr/bin/env bash

# required packages
sudo apt-get install unzip openjdk-7-jdk ruby1.9.1 xvfb build-essential

# get eclipse
wget -O eclipse.zip https://docs.google.com/uc?export=download&confirm=no_antivirus&id=0B9cQo3Kbl6AqV0pWYTh0SnZPNEk
unzip eclipse.zip
ECLIPSE_HOME="`find . -name eclipse* -type d`"
rm eclipse.zip

# android sdk
wget -O android-sdk.tgz http://dl.google.com/android/android-sdk_r20.0.3-linux.tgz 
tar -zxvf android-sdk.tgz
rm android-sdk.tgz

# eclim
wget -O eclim.jar http://downloads.sourceforge.net/project/eclim/eclim/1.7.11/eclim_1.7.11.jar?r=http%3A%2F%2Feclim.org%2Finstall.html&ts=1352658939&use_mirror=iweb

# install eclim into eclipse
java \
  -Dvim.files=$HOME/.vim \
  -Declipse.home=${ECLIPSE_HOME} \
  -jar eclim.jar install

# workspace
WORKSPACE="jimux-workspace"
mkdir ${WORKSPACE}
